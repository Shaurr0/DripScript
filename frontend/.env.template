# Google Gemini API Key (Free tier available - RECOMMENDED)
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# OpenWeatherMap API Key (Free tier available)
VITE_WEATHER_API_KEY=your_openweather_api_key_here

# Alternative: Hugging Face API Token (Free tier available)
VITE_HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# Alternative: OpenAI API Key (Limited free tier)
VITE_OPENAI_API_KEY=your_openai_api_key_here

# Alternative: Groq API (Free tier with good limits)
VITE_GROQ_API_KEY=your_groq_api_key_here

# Backend URL (Combined Server with Gemini AI)
VITE_BACKEND_URL=http://localhost:5000

# Feature flags
VITE_USE_AI_ANALYSIS=true
VITE_USE_REAL_WEATHER=true

# Firebase (client-side) configuration - Optional
VITE_USE_FIREBASE=false
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id